<UserControl x:Class="SmartPillBox.Views.DaySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartPillBox.Views"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="210">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <ToggleButton Content="S" IsChecked="{Binding Sunday}" MinWidth="30"/>
            <ToggleButton Content="M" IsChecked="{Binding Monday}" MinWidth="30"/>
            <ToggleButton Content="T" IsChecked="{Binding Tuesday}" MinWidth="30"/>
            <ToggleButton Content="W" IsChecked="{Binding Wednesday}" MinWidth="30"/>
            <ToggleButton Content="T" IsChecked="{Binding Thursday}" MinWidth="30"/>
            <ToggleButton Content="F" IsChecked="{Binding Friday}" MinWidth="30"/>
            <ToggleButton Content="S" IsChecked="{Binding Saturday}" MinWidth="30"/>
        </StackPanel>
    </Grid>
</UserControl>
